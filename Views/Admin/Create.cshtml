@model TechNewsUI.Models.CreateSectionMasterCommand

@{
    //Layout = null;
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    .form-control.is-valid, .was-validated .form-control:valid {
        border-color: #ced4da;
        padding-right: 0;
        background-image: none;
        background-repeat: no-repeat;
        background-position: right calc(0.375em + 0.1875rem) center;
        background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    }

        .form-control.is-valid, .was-validated .form-control:valid:focus {
            border-color: #ced4da;
            box-shadow: 0 0 0 0.25rem rgb(25 135 84 / 25%)
        }
</style>


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/create.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdn.korzh.com/metroui/v4.5.1/css/metro-all.min.css">


<div class="container w-100 d-flex justify-content-center align-items-center">
    <div class="row">
        <h4 class="text-center text-muted mt-4">Add Section</h4>
        <form asp-action="Create" enctype='multipart/form-data' style="margin: 0 auto;">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger border-0" role="alert">
                    <i class="bi bi-exclamation-circle-fill"></i> @TempData["Error"]
                </div>
            }
            @if (TempData["MySuccess"] != null)
            {
                <div class="alert alert-success border-0" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["MySuccess"]
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryType" class="control-label my-2"></label>
                <select asp-for="CategoryType" class="form-control" id="CategoryType">
                    <option value="empty">Select Option</option>
                    <option value="Youtube">Youtube</option>
                    <option value="CaseStudies">Case Studies</option>
                    <option value="Article">Article</option>
                    <option value="Webinar">Webinar</option>
                    <option value="Podcast">Podcast</option>
                    <option value="EventSchedule">Event</option>
                    <option value="Magazine">Magazine</option>
                    <option value="LiveInterview">Live Interview</option>
                </select>
                <span asp-validation-for="CategoryType" class="text-danger"></span>
            </div>
            <div id="DynamicFields" style="margin-left: 1%;padding: 1%;" >
            </div> 
            <input  id="dynamicDatahidden"  asp-for="DynamicData" hidden  />
            <div class="form-group my-3 removeTag">
                <input type="submit" value="Create"  class="btn btn-dark w-100"   />
            </div>
        </form>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/create.js"></script>
<script src="https://cdn.korzh.com/metroui/v4.5.1/js/metro.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

